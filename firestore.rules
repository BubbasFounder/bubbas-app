rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 👤 USER ROOT: Each user can read/write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // 🔧 Allow subcollections like preferences, billing, etc.
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 🗂️ JOURNALS ROOT: User can manage their own journal root
    match /journals/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // ✍️ JOURNAL ENTRIES: inside journals/{userId}/entries/{entryId}
      match /entries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 💬 CHATS: User can manage their own chat sessions
    match /chats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 💳 BILLING: User can view and manage their own billing metadata
    match /billing/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ⚙️ ADMIN DOCUMENTS: Only admin users can read/write these
    match /admin/{docId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
